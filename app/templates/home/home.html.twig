{% extends 'base.html.twig' %}
{% block body %}
    <main>
        <section class="hero text-center text-light">
            <div class="hero-bg"></div>
            <div class="hero-particles-container">
                <canvas id="hero-particles"></canvas>
            </div>
            <div class="container-sm">
                <div class="hero-inner">
                    <div class="hero-copy">
                        <h1 class="hero-title mt-0">DietWater</h1>
                        <p class="hero-paragraph">The first water that makes you lose weight.<br/>DietWater is the perfect weight loss beverage.</p>
                        <div class="hero-cta">
                            <a class="button button-primary button-wide-mobile" href="#">BUY NOW</a>
                        </div>
                    </div>
                    <div class="mockup-container">
                        <div class="mockup-bg">
                            <img src="{{ asset('dist/images/water-drops-hero-bg.png') }}" alt="DietWater background">
                        </div>
                        <img class="device-mockup" src="{{ asset('dist/images/dietwater-hero.png') }}" alt="DietWater Hero">
                    </div>
                </div>
            </div>
        </section>

        <section class="features-extended section">
            <div class="features-extended-inner section-inner">
                <div class="features-extended-wrap">
                    <div class="container">
                        <div class="feature-extended">
                            <div class="feature-extended-image">
                                <div class="mockup-bg">
                                    <img src="{{ asset("dist/images/iphone-feature-bg-01.svg") }}" alt="iPhone Feature 01 illustration">
                                </div>
                                <img class="device-mockup is-revealing" src="{{ asset('dist/images/dietwater-hero.png') }}" alt="DietWater">
                            </div>
                            <div class="feature-extended-body is-revealing">
                                <h3 class="mt-0 mb-16">Zero Sugar, Zero Fat</h3>
                                <p class="m-0">Diet Water is calorie-free. It is devoid of sugar and fats and thus contains no calories.</p>
                            </div>
                        </div>
                        <div class="feature-extended">
                            <div class="feature-extended-image">
                                <div class="mockup-bg">
                                    <img src="{{ asset("dist/images/iphone-feature-bg-02.svg") }}" alt="iPhone Feature 02 illustration">
                                </div>
                                <img class="device-mockup is-revealing" src="{{ asset('dist/images/dietwater-hero.png') }}" alt="DietWater">
                            </div>
                            <div class="feature-extended-body is-revealing">
                                <h3 class="mt-0 mb-16">The more you drink it, the less you weigh</h3>
                                <p class="m-0">You will get tons of benefits by drinking DietWater:</p>
                                <ul>
                                    <li>Reduce appetite, making you feel more full so that you eat fewer calories</li>
                                    <li>Reduce absorption of nutrients like fat, making you take in fewer calories</li>
                                    <li>Increase fat burning, making you burn more calories</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="reviews features-extended section mb-56" style="display: none">
            <h1>This is why we do what we do</h1>
            <div class="features-extended-inner section-inner">
                <div class="features-extended-wrap">
                    <div class="reviews-inner container"></div>
                    <div class="reviews-more-container container mt-32">
                        <button class="reviews-more button button-secondary">Load More</button>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
